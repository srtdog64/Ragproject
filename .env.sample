# .env.sample
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_ORGANIZATION=your_org_id_here_optional

# Google Gemini API Configuration  
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Azure OpenAI Configuration (Optional)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# Hugging Face Configuration (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HF_TOKEN=your_huggingface_token_here

# Database Configuration
CHROMA_PERSIST_DIR=./chroma_db
VECTOR_DB_PATH=./vector_store

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=7001
SERVER_WORKERS=1
DEBUG_MODE=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/rag_system.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Model Settings (Defaults)
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-3.5-turbo
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# Chunking Settings (Defaults)
DEFAULT_CHUNK_SIZE=1200
DEFAULT_CHUNK_OVERLAP=200
DEFAULT_CHUNKING_STRATEGY=adaptive

# Reranking Settings (Defaults)
DEFAULT_RERANKER=cross-encoder
DEFAULT_RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_TOP_K=5

# System Limits
MAX_FILE_SIZE_MB=50
MAX_CONTEXT_CHARS=8000
MAX_CHUNKS_PER_REQUEST=20
REQUEST_TIMEOUT=300
INGEST_TIMEOUT=600

# Feature Flags
ENABLE_CACHE=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_RERANKING=true
ENABLE_QUERY_EXPANSION=true
ENABLE_AUTO_INGEST=false

# Security
API_SECRET_KEY=your_secret_key_for_api_auth
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_FILE_TYPES=.pdf,.txt,.md,.json,.docx

# External Services (Optional)
ELASTICSEARCH_URL=http://localhost:9200
REDIS_URL=redis://localhost:6379
WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# Development Settings
HOT_RELOAD=true
VERBOSE_LOGGING=false
SAVE_CONVERSATIONS=true
